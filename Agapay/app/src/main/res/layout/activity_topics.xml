<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#064474">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Topics"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_help"
            android:background="@drawable/custom_imagebutton"
            android:layout_gravity="right"
            android:id="@+id/btn_help"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="LANDFORMS"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"
            android:textColor="#064474"
            android:textSize="20sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="CULTURES"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"
            android:textColor="#064474"
            android:textSize="20sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="TIME, CONTINUITY, AND CHANGE"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"
            android:textColor="#064474"
            android:textSize="20sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="PEOPLE, PLACES, AND ENVIRONMENTS"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"
            android:textColor="#064474"
            android:textSize="20sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="INDIVIDUAL DEVELOPMENT AND IDENTITY"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"
            android:textColor="#064474"
            android:textSize="20sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="POWER, AUTHORITY, AND GOVERNANCE"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"
            android:textColor="#064474"
            android:textSize="20sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="SCIENCE, TECHNOLOGY, AND SOCIETY"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"
            android:textColor="#064474"
            android:textSize="20sp"/>

    </LinearLayout>

</ScrollView>