<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".Topics"
    android:orientation="vertical">


        <Button
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="ELEMENTARY"
            android:background="@drawable/custom_button"
            android:layout_marginTop="70dp"
            android:textColor="#064474"
            android:textSize="25sp"
            android:onClick="btn_elementary"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="HIGHSCHOOL"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"
            android:textColor="#064474"
            android:textSize="25sp"
            android:onClick="btn_highshcool"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="COLLEGE"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"
            android:textColor="#064474"
            android:textSize="30sp"
            android:onClick="btn_college"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right|bottom"
            android:layout_marginTop="10dp">

        <Button
            android:layout_width="98dp"
            android:layout_height="37dp"
            android:layout_marginLeft="7dp"
            android:text="HOME"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_loginbutton"
            android:onClick="btn_home"/>

        <Button
            android:layout_width="98dp"
            android:layout_height="37dp"
            android:text="Back"
            android:layout_marginTop="20dp"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:background="@drawable/custom_loginbutton"
            android:onClick="btn_back"/>
        </LinearLayout>



    </LinearLayout>
