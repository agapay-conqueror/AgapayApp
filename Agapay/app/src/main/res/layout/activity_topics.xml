<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Topics"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_help"
            android:background="@drawable/custom_imagebutton"
            android:layout_gravity="right"
            android:id="@+id/btn_help"/>



        <Button
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="ELEMENTARY"
            android:background="@drawable/custom_button"
            android:layout_marginTop="70dp"
            android:textColor="#064474"
            android:textSize="25sp"
            android:onClick="btn_elementary"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="HIGHSCHOOL"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"
            android:textColor="#064474"
            android:textSize="25sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="COLLEGE"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"
            android:textColor="#064474"
            android:textSize="30sp"/>

        <Button
            android:layout_width="98dp"
            android:layout_height="37dp"
            android:layout_gravity="end"
            android:text="Back"
            android:layout_marginTop="20dp"
            android:fontFamily="monospace"
            android:textColor="#064474"
            android:background="@drawable/custom_loginbutton"
            android:onClick="btn_back"/>



    </LinearLayout>

</ScrollView>