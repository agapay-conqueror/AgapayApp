<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home"
        android:orientation="vertical"
        android:padding="30dp"
        >

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_help"
            android:background="@drawable/custom_imagebutton"
            android:layout_gravity="right"
            android:id="@+id/btn_help"/>


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/buttontopics"
            android:onClick="btn_topics"
            android:background="@drawable/custom_button"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/buttonphmap"
            android:onClick="btn_phMap"
            android:background="@drawable/custom_button"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/buttonvideos"
            android:background="@drawable/custom_button"
            android:onClick="btn_videos"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

</ScrollView>