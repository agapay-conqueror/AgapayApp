            android:textSize="17sp"
            android:textColor="#064474"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Social worker helps people or institutions to enhance social functioning."
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textColor="#064474"/>

